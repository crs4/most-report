<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/widget_height"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_header_height"
        android:background="@color/colorTitleCluster"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_title"
            style="@style/TitleStyleCluster"/>

        <ImageView
            android:id="@+id/image_toggle_widgets"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/expand"
            android:paddingEnd="@dimen/widget_margin"
            android:paddingLeft="@dimen/widget_margin"
            android:paddingRight="@dimen/widget_margin"
            android:paddingStart="@dimen/widget_margin"
            android:src="@drawable/expand_white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cluster_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <com.nhaarman.supertooltips.ToolTipRelativeLayout
        android:id="@+id/activity_main_tooltipRelativeLayout"
        style="@style/ToolTipStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorStroke"/>

</LinearLayout>

 
