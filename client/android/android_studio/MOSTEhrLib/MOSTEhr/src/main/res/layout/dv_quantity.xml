<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/widget_height"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_header_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_info"
            style="@style/InfoImageStyle"/>

        <TextView
            android:id="@+id/txt_title"
            style="@style/TitleStyle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_body_height"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txt_magnitude"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/widget_margin"
            android:layout_marginLeft="@dimen/widget_margin"
            android:layout_marginRight="@dimen/widget_margin"
            android:layout_marginStart="@dimen/widget_margin"
            android:inputType="numberDecimal"
            android:textColorHint="@color/colorEhrHint"
            android:textSize="@dimen/abc_text_size_body_1_material"/>

        <TextView
            android:id="@+id/txt_units"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/widget_margin"
            android:layout_marginLeft="@dimen/widget_margin"
            android:layout_marginRight="@dimen/widget_margin"
            android:layout_marginStart="@dimen/widget_margin"
            android:gravity="center_vertical"
            android:textSize="@dimen/abc_text_size_body_1_material"/>

    </LinearLayout>

    <com.nhaarman.supertooltips.ToolTipRelativeLayout
        android:id="@+id/activity_main_tooltipRelativeLayout"
        style="@style/ToolTipStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorEhrStroke"/>

</LinearLayout>
