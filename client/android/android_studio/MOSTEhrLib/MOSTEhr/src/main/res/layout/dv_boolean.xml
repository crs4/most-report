<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/widget_height"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_body_height"
        android:background="@color/colorEhrTitleBackground">

        <ImageView
            android:id="@+id/image_info"
            style="@style/InfoImageStyle"/>

        <TextView
            android:id="@+id/txt_title"
            style="@style/TitleStyle"
            android:layout_width="wrap_content"/>

        <CheckBox
            android:id="@+id/check_is_selected"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_body_height"
            android:layout_gravity="center_vertical"
            android:paddingEnd="@dimen/widget_margin"
            android:paddingLeft="@dimen/widget_margin"
            android:paddingRight="@dimen/widget_margin"
            android:paddingStart="@dimen/widget_margin"
            android:textSize="@dimen/abc_text_size_body_1_material"/>

    </LinearLayout>

    <com.nhaarman.supertooltips.ToolTipRelativeLayout
        android:id="@+id/activity_main_tooltipRelativeLayout"
        style="@style/ToolTipStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorEhrStroke"/>
</LinearLayout>

 
