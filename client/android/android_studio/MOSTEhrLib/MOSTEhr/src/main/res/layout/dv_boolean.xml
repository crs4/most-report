<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/widget_height"
              android:background="@drawable/widget_background"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_semi_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_help"
            style="@style/HelpImage"
            android:contentDescription="@string/info"/>

        <CheckBox
            android:id="@+id/check_is_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/widget_margin"
            android:layout_marginRight="@dimen/widget_margin"
            android:text="@string/selected"
            android:textSize="@dimen/abc_text_size_body_1_material"/>

    </LinearLayout>

    <com.nhaarman.supertooltips.ToolTipRelativeLayout
        android:id="@+id/activity_main_tooltipRelativeLayout"
        style="@style/ToolTipStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>

 
