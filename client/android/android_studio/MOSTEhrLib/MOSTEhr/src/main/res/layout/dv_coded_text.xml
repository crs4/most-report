<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/widget_height"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_header_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_info"
            style="@style/InfoImageStyle"/>

        <TextView
            android:id="@+id/txt_title"
            style="@style/TitleStyle"/>

    </LinearLayout>

    <Spinner
        android:id="@+id/spinnerState"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_body_height"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/widget_margin"
        android:layout_marginLeft="@dimen/widget_margin"
        android:layout_marginRight="@dimen/widget_margin"
        android:layout_marginStart="@dimen/widget_margin"
        android:minWidth="200dp"
        android:textSize="@dimen/abc_text_size_body_1_material">
    </Spinner>

    <com.nhaarman.supertooltips.ToolTipRelativeLayout
        android:id="@+id/activity_main_tooltipRelativeLayout"
        style="@style/ToolTipStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/widget_margin"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorStroke"/>

</LinearLayout>
