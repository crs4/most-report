<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ToolTipStyle">
        <item name="android:layout_marginLeft">@dimen/widget_margin</item>
        <item name="android:layout_marginRight">@dimen/widget_margin</item>
    </style>

    <style name="TitleStyle">
        <item name="android:background">@color/colorTitle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/widget_header_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/widget_margin</item>
        <item name="android:paddingRight">@dimen/widget_margin</item>
        <item name="android:drawableLeft">@drawable/info_blue</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableStart">@drawable/info_blue</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
    </style>

    <style name="TitleStyleArchetype" parent="TitleStyle">
        <item name="android:background">@color/colorTitleArchetype</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawableLeft">@drawable/info_white</item>
    </style>

    <style name="TitleStyleCluster" parent="TitleStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorTitleCluster</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawableLeft">@drawable/info_white</item>
    </style>


</resources>
