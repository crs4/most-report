<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ff004410"
    >
    
    <LinearLayout 
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    >
    
    <ImageView
        android:id="@+id/image_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_info_details" />
    
    <TextView  
    android:id="@+id/txt_archetype_title"
    android:textStyle="bold"
    android:layout_width="0dp" 
    android:layout_height="wrap_content" 
    android:text="Inner Archetype Viewer"
    android:textSize="20dp"
    android:textColor="#ff11AA30"
    android:layout_weight="1"
    android:layout_gravity="center_vertical"
    />
    
    <ImageView 
    android:id="@+id/image_toggle_widgets"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:layout_gravity="right"
    android:src="@android:drawable/ic_menu_more"
    />
    
</LinearLayout>
 
<LinearLayout 
    android:id="@+id/archetype_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    >
    
    
    
    </LinearLayout>

    <com.nhaarman.supertooltips.ToolTipRelativeLayout
        android:id="@+id/activity_main_tooltipRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
    android:layout_width="fill_parent"
    android:layout_height="2dp"
    android:background="@android:color/darker_gray"/>
  
</LinearLayout>

 
